.vuep-editor
  display none

.vuep-preview
  flex 1 1 auto
  width 100%
  padding 0
  border-radius 0
  height 100%
  border none
  overflow inherit

.field-wrapper
  position relative
  padding-top 3rem

.material-icons
  border-radius 0

.icon.material-icons.input-group__prepend-icon:hover
  cursor pointer
  color #009688

.btn__settings
  z-index 1 !important
  position absolute !important
  top 0
  right 0
  padding 0 !important
  margin 0 !important

  &:hover
    cursor pointer !important
    color #009688 !important

.fade-enter-active, .fade-leave-active
  transition opacity .5s

.fade-enter, .fade-leave-to
  opacity 0
